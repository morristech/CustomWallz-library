<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    app:cardBackgroundColor="?attr/card_background"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="@bool/card_use_compat_padding"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:theme="@style/ButtonStyle">

        <com.dm.wallpaper.board.utils.views.HeaderView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:heightRatio="1"
            app:widthRatio="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/content_margin"
            android:paddingEnd="8dp"
            android:paddingLeft="@dimen/content_margin"
            android:paddingRight="8dp"
            android:paddingStart="@dimen/content_margin"
            android:paddingTop="@dimen/content_margin">

            <TextView
                android:id="@+id/name"
                fontPath="fonts/Font-Medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_content"/>

            <TextView
                android:id="@+id/author"
                fontPath="fonts/Font-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_content"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check_box_black_24dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>