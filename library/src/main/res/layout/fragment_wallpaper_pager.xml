<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.dm.wallpaper.board.fragments.WallpaperPagerFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textSize="24sp"
            app:tabIndicatorColor="@color/toolbarIcon"
            app:tabIndicatorHeight="4dp"
            app:tabPaddingTop="15dp"
            app:tabPaddingBottom="15dp"
            app:tabTextColor="@color/toolbarIcon"
            app:tabSelectedTextColor="@color/toolbarIcon"/>
    </android.support.v4.view.ViewPager>

</FrameLayout>
